#library "MEDSymbol"
#include "zcommon.acs"

script "SYMPreset" (void)
{
	SetCVar("custoggle", 1);
	int Preset = GetCVar("pretoggle");
	int Master = GetCVar("asmtoggle");
	
    If(Preset == 0 && Master == 0)
	{
		SetCVar("medtoggle", 0);
		SetCVar("stmtoggle", 0);
		SetCVar("brztoggle", 0);
	}
	Else If(Master == 1)
	{
		SetResultValue(GetCVar("medtoggle"));
		SetResultValue(GetCVar("stmtoggle"));
		SetResultValue(GetCVar("brztoggle"));
		SetCVar("custoggle", 0);
		If(Preset == 1)
		{
			SetCVar("custoggle", 1);
			SetCVar("medtoggle", 1);
			SetCVar("stmtoggle", 1);
			SetCVar("brztoggle", 1);
		}
		Else If(Preset == 2)
		{
			SetCVar("custoggle", 1);
			SetCVar("medtoggle", 2);
			SetCVar("stmtoggle", 2);
			SetCVar("brztoggle", 2);
		}
	}
    Else If(Preset == 1 && Master == 0)
	{
		SetCVar("medtoggle", 1);
		SetCVar("stmtoggle", 1);
		SetCVar("brztoggle", 1);
	}
	Else If(Master == 1)
	{
		SetResultValue(GetCVar("medtoggle"));
		SetResultValue(GetCVar("stmtoggle"));
		SetResultValue(GetCVar("brztoggle"));
		SetCVar("custoggle", 0);
		If(Preset == 0)
		{
			SetCVar("custoggle", 1);
			SetCVar("medtoggle", 0);
			SetCVar("stmtoggle", 0);
			SetCVar("brztoggle", 0);
		}
		Else If(Preset == 2)
		{
			SetCVar("custoggle", 1);
			SetCVar("medtoggle", 2);
			SetCVar("stmtoggle", 2);
			SetCVar("brztoggle", 2);
		}
	}
    Else If(Preset == 2 && Master == 0)
	{
		SetCVar("medtoggle", 2);
		SetCVar("stmtoggle", 2);
		SetCVar("brztoggle", 2);
	}
	Else If(Master == 1)
	{
		SetResultValue(GetCVar("medtoggle"));
		SetResultValue(GetCVar("stmtoggle"));
		SetResultValue(GetCVar("brztoggle"));
		SetCVar("custoggle", 0);
		If(Preset == 0)
		{
			SetCVar("custoggle", 1);
			SetCVar("medtoggle", 0);
			SetCVar("stmtoggle", 0);
			SetCVar("brztoggle", 0);
		}
		Else If(Preset == 1)
		{
			SetCVar("custoggle", 1);
			SetCVar("medtoggle", 1);
			SetCVar("stmtoggle", 1);
			SetCVar("brztoggle", 1);
		}
	}
	
	Delay(1);
	Restart;
}

