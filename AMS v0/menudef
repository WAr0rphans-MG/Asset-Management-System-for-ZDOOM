// Medical symbols customization menu
// Provides both preset buttons (via KEYCONF aliases) and individual CVar dropdowns
OptionMenu "MEDOPT"
{
    Title "Alternate Medical Symbols"
    StaticText " "
    
    // Preset buttons - set all three items at once
    command "Standard Red Preset",  "Standard_Red"
    StaticText " "
    command "Green Cross Preset",   "Green_Cross"
    StaticText " "
    command "Pills Here Preset",    "Pills_Here"
    
    StaticText " "
    
    // Individual item controls - allows mixing different styles
    option "Alternate Medikit Symbols", "medtoggle", "MedBagOfTricks"
    StaticText " "
    option "Alternate Stimpak Symbols", "stmtoggle", "MedBagOfTricks"
    StaticText " "
    option "Alternate Berserk Symbols", "brztoggle", "MedBagOfTricks"
}

// Dropdown options for medical symbol CVars
OptionValue MedBagOfTricks
{
    0.0, "Standard Red"
    1.0, "Green Cross"
    2.0, "Pills Here"
}

// Main options menu - adds submenu for medical symbols
// (Inherited structure from base mod - later learned about AddOptionMenu for cleaner integration)
OptionMenu "OptionsMenu"
{
    Title "OPTIONS"
    StaticText " "
    Submenu "Customize Controls",       "CustomizeControls"
    Submenu "Mouse options",            "MouseOptions"
    Submenu "Joystick options",         "JoystickOptions"
    StaticText " "
    Submenu "Gameplay Options",         "GameplayOptions"
    Submenu "Compatibility Options",    "CompatibilityOptions"
    Submenu "Automap Options",          "AutomapOptions"
    Submenu "HUD Options",              "HUDOptions"
    Submenu "Miscellaneous Options",    "MiscOptions"
    Submenu "Sound Options",            "SoundOptions"
    Submenu "Display Options",          "VideoOptions"
    Submenu "Set video mode",           "VideoModeMenu"
    StaticText " "
    SafeCommand "Reset to defaults",    "reset2defaults"
    SafeCommand "Reset to last saved",  "reset2saved"
    Command "Go to console",            "menuconsole"
    
    StaticText " "
    Submenu "Alternative Medical Symbols", "MEDOPT"  // Custom submenu entry
    StaticText " "
}